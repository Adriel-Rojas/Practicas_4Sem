<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.RecuperarPage"
             Title="Recuperar Contraseña">
    <VerticalStackLayout>
        <Label 
        Text="Recuperar Contraseña"
        FontSize="30"
        TextColor="White"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <FlexLayout Direction="Column" AlignItems="Start"
JustifyContent="Center" Padding="20">
            <Entry Placeholder="Correo" WidthRequest="250" Margin="0,0,0,10"/>
            <Entry Placeholder="Codigo de Verificacion" WidthRequest="250" Margin="0,0,0,20"/>

            <Button Text="Recuperar" WidthRequest="300"
Background="DimGray"
TextColor="White"
FontAttributes="Bold"
FontSize="18"
CornerRadius="15"
Margin="6,10,0,0"/>
        </FlexLayout>
    </VerticalStackLayout>
</ContentPage>