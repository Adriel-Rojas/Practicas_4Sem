<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.CrearContactoPage"
             Title="Crear Contacto">
    
    <VerticalStackLayout>
        <FlexLayout Direction="Column" AlignItems="Start"
                    JustifyContent="Center" Padding="20">
            <Entry Placeholder="Nombre" WidthRequest="250" Margin="0,0,0,10" />
            <Entry Placeholder="Teléfono" WidthRequest="250" Margin="0,0,0,10"/>
            <Entry Placeholder="Correo" WidthRequest="250" Margin="0,0,0,10"/>
            <Entry Placeholder="Dirección" WidthRequest="250" Margin="0,0,0,20"/>

            <Button Text="Guardar Contacto" WidthRequest="300"
                    Background="DimGray"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="18"
                    CornerRadius="15"
                    Margin="6,10,0,0"/>

        </FlexLayout>
        
    </VerticalStackLayout>
    
</ContentPage>